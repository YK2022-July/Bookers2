<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'user', book: @book %>
    </div>

     <div class="col-8 offset-1 ml-2">
      <h2>Users</h2>

      <div>
        <span>image</span>
        <span>name</span>
        <span></span>
      </div>

      <% @users.each do |user| %>
        <div>
          <span><%= image_tag user.get_profile_image(80,80) %></span>
          <span><%= user.name %></span>
          <span><%= link_to "Show", user_path(user.id) %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>