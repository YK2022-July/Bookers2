<div class="container">
  <div class="row">
    <div class="col-12 px-5 mx-auto">

      <h2>User info</h2>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <div>
            <%= f.text_field :name, id: "inputName", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <div>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"form-control-file" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <div>
            <%= f.text_area :introduction, id: "inputIntroduction", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>