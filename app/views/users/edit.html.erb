<div class="container">
  <div class="row d-flex">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>

      <% if @user.errors.any? %>
      <div id="error_explanation">
        <h3>
          <%= @user.errors.count %>
          error prohibited this obj from being saved:
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <div>
            <%= f.text_field :name, id: "inputName", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <div>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"form-control-file" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <div>
            <%= f.text_area :introduction, id: "inputIntroduction", class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>