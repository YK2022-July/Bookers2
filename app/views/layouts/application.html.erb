<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

　　<script src="https://kit.fontawesome.com/a02775ddad.js" crossorigin="anonymous"></script>
  </head>
  <body class="d-flex flex-column">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container d-flex">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li Class="nav-item p-2">
                <%= link_to user_path(current_user.id) do %>
                  <i class="fas fa-home text-light"></i>
                  <span class="text-light">Home</span>
                <% end %>
              </li>
              <li Class="nav-item p-2">
                <%= link_to  users_path do %>
                  <i class="fas fa-users text-light"></i>
                  <span class="text-light">Users</span>
                <% end %>
              </li>
              <li Class="nav-item p-2">
                <%= link_to books_path do %>
                  <i class="fas fa-book-open text-light"></i>
                  <span class="text-light">Books</span>
                <% end %>
              </li>
              <li Class="nav-item p-2">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt text-light"></i>
                  <span class="text-light">Log out</span>
                <% end %>
              </li>
            <% else %>
              <li Class="nav-item p-2">
                <%= link_to root_path do %>
                  <i class="fas fa-home text-light"></i>
                  <span class="text-light">Home</span>
                <% end %>
              </li>
              <li Class="nav-item p-2">
                <%= link_to about_path do %>
                  <i class="fas fa-link text-light"></i>
                  <span class="text-light">About</span>
                <% end %>
              </li>
              <li Class="nav-item p-2">
                <%= link_to new_user_registration_path do %>
                  <i class="fas fa-user-plus text-light"></i>
                  <span class="text-light">Sign up</span>
                <% end %>
              </li>
              <li Class="nav-item p-2">
                <%= link_to new_user_session_path do %>
                  <i class="fas fa-sign-in-alt text-light"></i>
                  <span class="text-light">Log in</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row d-flex">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
