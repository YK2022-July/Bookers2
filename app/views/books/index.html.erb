<div class="container">

<% if @book.errors.any? %>
  <h3>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
  </h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="row d-flex">
    <div class="col">
      <%= render 'users/user', book: @book %>
    </div>
    <div class="col ml-5">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
           <thead>
             <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <tbody>
             <% @books.each do |book| %>
               <tr>
                 <td><%= link_to image_tag(book.user.profile_image, size: "80x80"),user_path(book.user_id) %></td>
                 <td><%= link_to book.title, book_path(book.id) %></td>
                 <td><%= book.body %></td>
               </tr>
             <% end %>
           </tbody>
        </table>
    </div>
  </div>
</div>