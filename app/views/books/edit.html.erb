<div class="container">
  <div class="row">
    <div class="col-12 px-5 mx-auto">

      <h1>Editing Book</h1>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path %>
      <span>|</span>
      <%= link_to "Back", books_path %>

    </div>
  </div>
</div>